{
  "manifest_version": 3,
  "name": "CalZone",
  "version": "0.1",
  "description": "A simple solution to converting dates between timezones and creating calendar appointments.",
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "author": "Joseph Tey",
  "short_name": "CalZone",
  "action": {
    "default_popup": "popup.html",
    "default_title": "CalZone",
    "default_icon": {
      "16": "/images/calzone-icon-16.png",
      "32": "/images/calzone-icon-32.png",
      "48": "/images/calzone-icon-48.png",
      "128": "/images/calzone-icon-128.png"
    }
  },
  "icons": {
    "16": "/images/calzone-icon-16.png",
    "32": "/images/calzone-icon-32.png",
    "48": "/images/calzone-icon-48.png",
    "128": "/images/calzone-icon-128.png"
  }
}